{
	"name": "root",
	"version": "0.0.0",
	"main": "dist/index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/core",
		"packages/*"
	],
	"scripts": {
		"publish:_git": "node ./scripts/publish-git.js",
		"publish:git": "run-s build publish:_git",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint:es": "eslint --ext js,jsx -c .eslintrc.js ./",
		"lint:es:fix": "run-s \"lint:es --fix\"",
		"lint:ts": "tslint -c tslint.json \"**/*.{ts,tsx}\" -e \"node_modules\"",
		"lint:ts:fix": "run-s \"lint:ts:fix --fix\"",
		"lint": "run-s lint:ts lint:es",
		"lint:fix": "run-s lint:*:fix",
		"// required scripts: build, test": "",
		"build": "yarn workspaces run build",
		"test": "yarn workspaces run test"
	},
	"devDependencies": {
		"debug": "^4.1.1",
		"eslint": "^6.7.1",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.17.0",
		"eslint-plugin-react-hooks": "^1.7.0",
		"gh-pages": "^2.1.1",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"react": "^16.12.0",
		"tslint": "^5.20.1",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^4.1.0",
		"typescript": "^3.7.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"yarn run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	}
}
