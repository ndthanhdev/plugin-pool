{
	"name": "root",
	"version": "1.0.0",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint": "lerna exec -- npm run lint",
		"// required scripts: build, test, lint, lint:fix": "",
		"test": "lerna exec -- npm run test",
		"lint:fix": "lerna exec -- npm run lint:fix"
	},
	"devDependencies": {
		"husky": "^2.3.0",
		"lerna": "^3.15.0",
		"lint-staged": "^8.1.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"npm run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	}
}
