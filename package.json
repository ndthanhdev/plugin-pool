{
	"name": "root",
	"version": "0.0.4",
	"main": "dist/index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/core/registry",
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces run build",
		"publish:_git": "node ./scripts/publish-git.js",
		"publish:git": "run-s build publish:_git",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint": "lerna exec -- npm run lint",
		"// required scripts: build, test, lint, lint:fix, publish:git": "",
		"test": "lerna exec -- npm run test",
		"lint:fix": "lerna exec -- npm run lint:fix"
	},
	"devDependencies": {
		"gh-pages": "^2.1.1",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"npm run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	}
}
