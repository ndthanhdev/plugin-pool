{
	"name": "root",
	"version": "1.1.0-alpha.3",
	"main": "dist/index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/core",
		"packages/*"
	],
	"scripts": {
		"publish:_git": "node ./scripts/publish-git.js",
		"publish:git": "run-s build publish:_git",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint": "eslint --ext js,jsx,ts,tsx -c .eslintrc.js ./",
		"lint:fix": "run-s \"lint --fix\"",
		"// required scripts: build, test": "",
		"build": "yarn workspaces foreach run build",
		"test": "yarn workspaces foreach run test",
		"_test:base": "yarn run jest",
		"test:core": "yarn run _test:base -c etc/jestConfig/core.js"
	},
	"devDependencies": {
		"@types/jest": "^26.0.8",
		"@typescript-eslint/eslint-plugin": "^2.17.0",
		"@typescript-eslint/parser": "^2.17.0",
		"@yarnpkg/pnpify": "^2.1.0",
		"debug": "^4.1.1",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-eslint-comments": "^3.1.2",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-jest": "^23.6.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.18.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"gh-pages": "^2.2.0",
		"husky": "^4.2.1",
		"jest": "^26.2.2",
		"lint-staged": "^10.0.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"react": "^16.12.0",
		"ts-jest": "^26.1.4",
		"tslint": "^6.0.0",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^4.2.0",
		"typescript": "^3.7.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"yarn run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	},
	"dependenciesMeta": {
		"@sv-pool/registry": {
			"unplugged": true
		},
		"@svc-pool/registry": {
			"unplugged": true
		}
	}
}
