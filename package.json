{
	"name": "root",
	"version": "0.0.5",
	"main": "dist/index.js",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces run build",
		"publish:_git": "node ./scripts/publish-git.js",
		"publish:git": "run-s build publish:_git",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint": "tslint -c tslint.json \"**/*.{ts,tsx}\" -e \"node_modules\"",
		"// required scripts: build, test": "",
		"test": "lerna exec -- npm run test",
		"lint:fix": "lerna exec -- npm run lint:fix"
	},
	"devDependencies": {
		"gh-pages": "^2.1.1",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"tslint": "^5.20.1",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^4.1.0",
		"typescript": "^3.7.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"npm run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	}
}
